CREATE OR REPLACE FUNCTION get_customer_summary()
RETURNS TABLE (
  total_customer INTEGER,
  avg_score NUMERIC
)
LANGUAGE plpgsql
AS $$
BEGIN
  RETURN QUERY
  SELECT
    COUNT(*) AS total_customer,
    AVG(score) AS avg_score
  FROM sales.customers
  WHERE country = 'USA';
END;
$$;

SELECT * FROM get_customer_summary();

